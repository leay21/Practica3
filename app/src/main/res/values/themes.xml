<resources>
    <style name="Base.Theme.GestorDeArchivos" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.GestorDeArchivos.Guinda" parent="Base.Theme.GestorDeArchivos">
        <item name="colorPrimary">@color/guinda_primary</item>
        <item name="colorOnPrimary">@color/guinda_on_primary</item>
        <item name="colorSecondary">@color/guinda_secondary</item>
        <item name="colorOnSecondary">@color/guinda_on_secondary</item>
    </style>

    <style name="Theme.GestorDeArchivos.Azul" parent="Base.Theme.GestorDeArchivos">
        <item name="colorPrimary">@color/azul_primary</item>
        <item name="colorOnPrimary">@color/azul_on_primary</item>
        <item name="colorSecondary">@color/azul_secondary</item>
        <item name="colorOnSecondary">@color/azul_on_secondary</item>
    </style>

    <style name="FileOptionItem" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>