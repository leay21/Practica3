<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fileExplorerFragment">

    <fragment
        android:id="@+id/fileExplorerFragment"
        android:name="com.example.practica3.FileExplorerFragment"
        android:label="fragment_file_explorer"
        tools:layout="@layout/fragment_file_explorer">

        <action
            android:id="@+id/action_fileExplorerFragment_to_textVisualizerFragment"
            app:destination="@id/textVisualizerFragment" />
        <action
            android:id="@+id/action_fileExplorerFragment_to_imageVisualizerFragment"
            app:destination="@id/imageVisualizerFragment" />

        <action
            android:id="@+id/action_fileExplorerFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/textVisualizerFragment"
        android:name="com.example.practica3.TextVisualizerFragment"
        android:label="fragment_text_visualizer"
        tools:layout="@layout/fragment_text_visualizer">
        <argument
            android:name="filePath"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/imageVisualizerFragment"
        android:name="com.example.practica3.ImageVisualizerFragment"
        android:label="fragment_image_visualizer"
        tools:layout="@layout/fragment_image_visualizer">
        <argument
            android:name="filePath"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.practica3.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />

</navigation>